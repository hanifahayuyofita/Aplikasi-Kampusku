<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginSplashScreen">

    <Button
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:backgroundTint="#FFFF"
        android:foregroundTint="#F44336"
        android:shadowColor="#F44336"
        android:text="Login"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="viewStart"
        android:textColorHighlight="#FA0606"
        android:textColorHint="#F6082C"
        android:textColorLink="#F30505" />

    <TextView
        android:id="@+id/tvKosong2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tvSelamatDatang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:textAlignment="center"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="245dp" />

    <TextView
        android:id="@+id/tvKosong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tvLoginSukses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login Sukses"
        android:textAlignment="center"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="352dp" />

</LinearLayout>